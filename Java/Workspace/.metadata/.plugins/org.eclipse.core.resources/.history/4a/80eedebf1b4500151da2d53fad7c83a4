	public static int getRoot(int[] set, int position){
	
		int num = set[position];
		while(num != position){
			position = num;
			num = set[position];
			
		}
		
		return num;
	}
	public static int Find(int numtofind, int[] list){
	
			for(int d = 0; d < list.length; d++){
				if(numtofind == list[d]){
					return getRoot(list, d);
				}
			}
		
		return -999;
	}
